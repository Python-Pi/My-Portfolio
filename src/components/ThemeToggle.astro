---
/**
 * ThemeToggle Component
 * 
 * Interactive button that toggles between light and dark color themes. Persists user
 * preference to localStorage and respects system color scheme preference as the default.
 * Displays sun icon in light mode and moon icon in dark mode.
 * 
 * Features:
 * - Persists theme preference to localStorage
 * - Respects system color scheme preference (prefers-color-scheme)
 * - Automatically updates when system preference changes (if no manual preference set)
 * - Works with Astro View Transitions via event delegation
 * - Accessible with keyboard focus and ARIA labels
 * 
 * @component
 * 
 * @example
 * ```astro
 * <ThemeToggle />
 * ```
 */
---

<button 
  class="theme-toggle" 
  type="button" 
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <svg class="icon icon-sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg class="icon icon-moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: var(--border-radius-sm);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: color var(--transition-fast), background var(--transition-fast);
    flex-shrink: 0;
  }

  .theme-toggle:hover {
    color: var(--color-text);
    background: var(--color-bg-secondary);
  }

  .theme-toggle:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .icon-sun {
    display: none;
  }

  .icon-moon {
    display: block;
  }

  :global([data-theme="light"]) .icon-sun {
    display: block;
  }

  :global([data-theme="light"]) .icon-moon {
    display: none;
  }
</style>

<script>
  // Get theme from storage or system preference
  const getTheme = (): 'light' | 'dark' => {
    const stored = localStorage.getItem('theme');
    if (stored === 'light' || stored === 'dark') return stored;
    return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
  };

  // Apply theme to document
  const setTheme = (theme: 'light' | 'dark') => {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
  };

  const getRevealOrigin = (element: Element | null) => {
    if (!element) {
      return { x: window.innerWidth / 2, y: window.innerHeight / 2 };
    }
    const rect = element.getBoundingClientRect();
    return { x: rect.left + rect.width / 2, y: rect.top + rect.height / 2 };
  };

  const runThemeReveal = (originElement: Element | null, nextTheme: 'light' | 'dark') => {
    const root = document.documentElement;
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    const isMobile = window.matchMedia('(max-width: 768px)').matches;

    if (prefersReduced || isMobile) {
      setTheme(nextTheme);
      return;
    }

    const { x, y } = getRevealOrigin(originElement);
    const maxX = Math.max(x, window.innerWidth - x);
    const maxY = Math.max(y, window.innerHeight - y);
    const radius = Math.hypot(maxX, maxY);
    const oldBg = getComputedStyle(root).getPropertyValue('--color-bg-base').trim();

    root.style.setProperty('--theme-reveal-x', `${x}px`);
    root.style.setProperty('--theme-reveal-y', `${y}px`);
    root.style.setProperty('--theme-reveal-size', `${radius}px`);
    root.style.setProperty('--theme-mask-color', oldBg || getComputedStyle(document.body).backgroundColor);

    root.classList.add('theme-reveal');
    setTheme(nextTheme);
    requestAnimationFrame(() => {
      root.classList.add('theme-reveal--active');
    });

    window.setTimeout(() => {
      root.classList.remove('theme-reveal', 'theme-reveal--active');
    }, 500);
  };

  // Toggle theme
  const toggleTheme = (originElement: Element | null) => {
    const current = document.documentElement.getAttribute('data-theme');
    const nextTheme = current === 'dark' ? 'light' : 'dark';
    runThemeReveal(originElement, nextTheme);
  };

  // Use event delegation on document to handle clicks
  // This works reliably with transition:persist
  document.addEventListener('click', (e) => {
    const toggle = (e.target as Element).closest('.theme-toggle');
    if (toggle) {
      toggleTheme(toggle);
    }
  });

  // Listen for system preference changes (only once)
  window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
    if (!localStorage.getItem('theme')) {
      setTheme(e.matches ? 'light' : 'dark');
    }
  });

  // Set initial theme
  setTheme(getTheme());
</script>

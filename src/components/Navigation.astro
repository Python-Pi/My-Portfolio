---
/**
 * Navigation Component
 * 
 * Main site navigation with responsive behavior and theme toggle. Features centered
 * navigation on desktop and horizontal scrolling on mobile. The theme toggle is fixed
 * at the right edge with a gradient fade effect.
 * 
 * Navigation items are configured in src/config.ts and automatically include a "Home"
 * link at the beginning. Active page highlighting is handled both server-side and
 * client-side for View Transitions support.
 * 
 * @component
 * 
 * @example
 * ```astro
 * <Navigation />
 * ```
 */
import { Icon } from 'astro-icon/components';
import { siteConfig } from '../config';
import ThemeToggle from './ThemeToggle.astro';
import ThemeColorSelect from './ThemeColorSelect.astro';

const currentPath = Astro.url.pathname;

/**
 * Navigation items with Home prepended
 * 
 * Combines a hardcoded Home link with navigation items from site config
 * to ensure Home is always first in the navigation.
 */
const navItems = [
  { label: 'Home', href: '/' },
  ...siteConfig.nav,
];

/**
 * Determines if a navigation item should be marked as active
 * 
 * Home link is only active on the exact root path. Other links are active
 * if the current path starts with their href, allowing child pages to
 * highlight their parent navigation item.
 * 
 * @param href - The navigation item's URL
 * @returns True if the navigation item should be marked as active
 */
const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
};
---

<nav class="site-nav" aria-label="Main navigation">
  <a href="/" class="nav-brand" aria-label="Go to homepage">
    <span class="nav-brand__logo">
      <img
        src="/logo-white.svg"
        alt={`${siteConfig.title} logo`}
        width="40"
        height="40"
        class="nav-brand__image nav-brand__image--dark"
        loading="eager"
      />
      <img
        src="/logo-black.svg"
        alt={`${siteConfig.title} logo`}
        width="40"
        height="40"
        class="nav-brand__image nav-brand__image--light"
      />
    </span>
  </a>
  <div class="nav-scroll">
    <ul class="nav-list">
      {navItems.map((item) => (
        <li class:list={['nav-item', { 'nav-item--active': isActive(item.href) }]}>
          <a 
            href={item.href} 
            class:list={['nav-link', { 'nav-link--active': isActive(item.href) }]}
            aria-current={isActive(item.href) ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
  <div class="nav-end">
    <a href="/search" class="nav-search" aria-label="Search site">
      <Icon name="mdi:magnify" aria-hidden="true" class="nav-search__icon" />
      <span class="sr-only">Search</span>
    </a>
    <a href="/archive" class="nav-icon-button" aria-label="Archive">
      <Icon name="mdi:archive" aria-hidden="true" class="nav-search__icon" />
      <span class="sr-only">Archive</span>
    </a>
    <ThemeColorSelect />
    <ThemeToggle />
    <button
      type="button"
      class="nav-icon-button nav-menu"
      aria-label="Open navigation menu"
      aria-expanded="false"
      aria-controls="mobile-nav-menu"
    >
      <Icon name="mdi:menu" aria-hidden="true" class="nav-search__icon" />
      <span class="sr-only">Menu</span>
    </button>
  </div>
  <div class="nav-menu-panel" id="mobile-nav-menu" hidden>
    <ul class="nav-menu-list">
      {navItems.map((item) => (
        <li class="nav-menu-item">
          <a
            href={item.href}
            class:list={['nav-menu-link', { 'nav-menu-link--active': isActive(item.href) }]}
            aria-current={isActive(item.href) ? 'page' : undefined}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  function updateActiveNav() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.nav-link');
    const menuLinks = document.querySelectorAll('.nav-menu-link');
    
    navLinks.forEach((link) => {
      const href = link.getAttribute('href');
      let isActive = false;
      
      if (href === '/') {
        isActive = currentPath === '/';
      } else if (href) {
        isActive = currentPath.startsWith(href);
      }
      
      link.classList.toggle('nav-link--active', isActive);
      link.closest('.nav-item')?.classList.toggle('nav-item--active', isActive);
      if (isActive) {
        link.setAttribute('aria-current', 'page');
      } else {
        link.removeAttribute('aria-current');
      }
    });

    menuLinks.forEach((link) => {
      const href = link.getAttribute('href');
      let isActive = false;

      if (href === '/') {
        isActive = currentPath === '/';
      } else if (href) {
        isActive = currentPath.startsWith(href);
      }

      link.classList.toggle('nav-menu-link--active', isActive);
      if (isActive) {
        link.setAttribute('aria-current', 'page');
      } else {
        link.removeAttribute('aria-current');
      }
    });
  }

  const menuButton = document.querySelector('.nav-menu') as HTMLButtonElement | null;
  const menuPanel = document.querySelector('#mobile-nav-menu') as HTMLElement | null;

  function setMenuOpen(isOpen: boolean) {
    if (!menuButton || !menuPanel) return;
    menuPanel.hidden = !isOpen;
    menuButton.setAttribute('aria-expanded', String(isOpen));
  }

  function toggleMenu() {
    if (!menuPanel) return;
    setMenuOpen(menuPanel.hidden);
  }

  menuButton?.addEventListener('click', (event) => {
    event.stopPropagation();
    toggleMenu();
  });

  menuPanel?.addEventListener('click', (event) => {
    const target = event.target as HTMLElement | null;
    if (target?.closest('a')) {
      setMenuOpen(false);
    }
  });

  document.addEventListener('click', (event) => {
    if (!menuPanel || menuPanel.hidden) return;
    const target = event.target as HTMLElement | null;
    if (!target?.closest('.nav-menu')) {
      setMenuOpen(false);
    }
  });

  function enableNavTransitions() {
    document.documentElement.classList.add('nav-ready');
  }

  function prepareNavTransitions() {
    document.documentElement.classList.remove('nav-ready');
    updateActiveNav();
    setMenuOpen(false);
    requestAnimationFrame(() => requestAnimationFrame(enableNavTransitions));
  }

  // Run on initial load and after each navigation
  document.addEventListener('astro:page-load', prepareNavTransitions);
  prepareNavTransitions();
</script>

<style>
  .site-nav {
    display: flex;
    align-items: center;
    position: relative;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg);
    padding: var(--space-md) 0;
    margin-bottom: var(--space-md);
  }

  .nav-brand {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    padding: 0 var(--space-md);
  }

  .nav-brand__logo {
    display: inline-flex;
    align-items: center;
  }

  .nav-brand__image {
    display: block;
    width: 40px;
    height: 40px;
  }

  .nav-brand__image--light {
    display: none;
  }

  :global([data-theme="light"]) .nav-brand__image--light {
    display: block;
  }

  :global([data-theme="light"]) .nav-brand__image--dark {
    display: none;
  }

  .nav-scroll {
    flex: 1;
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .nav-scroll::-webkit-scrollbar {
    display: none;
  }

  .nav-list {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0.5rem 1.5rem;
    min-width: max-content;
  }

  .nav-item {
    margin: 0;
    flex-shrink: 0;
  }

  .nav-link {
    position: relative;
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: -6px;
    height: 2px;
    background: var(--color-accent);
    border-radius: 999px;
    transform: scaleX(0);
    transform-origin: center;
  }

  :global(.nav-ready) .nav-link::after {
    transition: transform 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-text);
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .nav-link--active {
    color: var(--color-text);
  }

  .nav-link--active::after {
    transform: scaleX(1);
  }

  .nav-end {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0 0.75rem;
    border-left: 1px solid var(--color-border);
    background: var(--color-bg);
    position: relative;
  }

  .nav-end::before {
    content: '';
    position: absolute;
    left: -24px;
    top: 0;
    bottom: 0;
    width: 24px;
    background: linear-gradient(to right, transparent, var(--color-bg));
    pointer-events: none;
  }

  .nav-search,
  .nav-icon-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    padding: 0;
    border-radius: var(--border-radius-sm);
    border: none;
    background: transparent;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast), background var(--transition-fast), transform var(--transition-fast);
  }

  .nav-menu {
    display: none;
    margin-left: 0.1rem;
  }

  .nav-menu-panel {
    position: absolute;
    right: 0.75rem;
    top: calc(100% + 0.5rem);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    padding: 0.5rem;
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
    z-index: 20;
    min-width: 11rem;
  }

  .nav-menu-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-menu-item {
    margin: 0;
  }

  .nav-menu-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    border-radius: var(--border-radius-sm);
    transition: color var(--transition-fast), background var(--transition-fast);
  }

  .nav-menu-link:hover,
  .nav-menu-link--active {
    color: var(--color-text);
    background: var(--color-bg-secondary);
  }

  .nav-search:hover,
  .nav-icon-button:hover {
    color: var(--color-text);
    background: var(--color-bg-secondary);
    transform: translateY(-1px);
  }

  .nav-search:focus-visible,
  .nav-icon-button:focus-visible {
    color: var(--color-text);
    background: var(--color-bg-secondary);
    transform: translateY(-1px);
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .nav-search__icon {
    width: 1.15rem;
    height: 1.15rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 768px) {
    .nav-menu {
      display: inline-flex;
    }

    .nav-menu-panel {
      right: 0.5rem;
      left: 0.5rem;
      min-width: auto;
    }

    .nav-item {
      display: none;
    }

    .nav-item--active {
      display: block;
    }

    .nav-list {
      justify-content: flex-start;
      gap: 1.5rem;
      padding: 0.5rem 1rem;
    }

    .nav-brand {
      padding: 0 0.75rem 0 1rem;
    }

    .nav-link {
      font-size: 0.75rem;
    }

    .nav-end {
      gap: 0.45rem;
      padding: 0 0.5rem;
    }

    .nav-end::before {
      left: -16px;
      width: 16px;
    }

    .nav-search,
    .nav-icon-button {
      width: 32px;
      height: 32px;
    }
  }
</style>

/**
 * Home Page
 * ===========================================
 * Design Philosophy:
 * - Just my blogs, notes, projects and books I've read
 *
 * Sections:
 * 1. Hero/Intro
 * 2. Introduction
 * 3. Recent Blogs
 * 4. Notes Preview
 * 5. Books I've Read
 * 6. Topics of Interest
 *
 * Route: /
 *
 * @page
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';
import ForwardLink from '../components/ForwardLink.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../config';
import { Icon } from 'astro-icon/components';

const allBlogs = await getCollection('blogs');
const recentBlogs = allBlogs
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2);

const allMiniBlogs = await getCollection('mini-blogs');
const recentMiniBlogs = allMiniBlogs
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 3);

const allLiteratureReviews = await getCollection('literature-review');
const recentLiteratureReviews = allLiteratureReviews
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2);

const allBooks = await getCollection('books');
const recentBooks = allBooks
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2);

function formatStatus(status?: string): string | undefined {
  if (!status) {
    return undefined;
  }
  return status.charAt(0).toUpperCase() + status.slice(1);
}

function getStatusClass(status?: string): string | undefined {
  if (!status) {
    return undefined;
  }
  return `status-pill status-pill--${status}`;
}

const iconNames: Record<string, string> = {
  github: 'mdi:github',
  linkedin: 'mdi:linkedin',
  email: 'mdi:email-outline',
};

const socialLinks = Object.entries(siteConfig.social)
  .filter(([_, url]) => url)
  .map(([platform, url]) => ({
    key: platform,
    label: platform.charAt(0).toUpperCase() + platform.slice(1),
    url,
  }));

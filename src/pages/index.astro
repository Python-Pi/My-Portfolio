---
/**
 * Home Page
 * ===========================================
 * Design Philosophy:
 * - Just my blogs, notes, projects and books I've read
 *
 * Sections:
 * 1. Hero/Intro
 * 2. Introduction
 * 3. Recent Blogs
 * 4. Notes Preview
 * 5. Books I've Read
 * 6. Topics of Interest
 *
 * Route: /
 *
 * @page
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import StructuredData from '../components/StructuredData.astro';
import ForwardLink from '../components/ForwardLink.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../config';
import { Icon } from 'astro-icon/components';
import { calculateReadingTime, getReadingTime } from '../utils/readingTime';

const allBlogs = await getCollection('blogs', ({ data }) => data.status !== 'archived');
const sortedBlogs = [...allBlogs]
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
const latestFeaturedBlog = sortedBlogs.find((blog) => blog.data.featured);
const recentBlogs = latestFeaturedBlog
  ? [
      latestFeaturedBlog,
      ...sortedBlogs
        .filter((blog) => blog.id !== latestFeaturedBlog.id)
        .slice(0, 2),
    ]
  : sortedBlogs.slice(0, 3);

const allLiteratureReviews = await getCollection('literature-review', ({ data }) => data.status !== 'archived');
const recentLiteratureReviews = allLiteratureReviews
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2);

const allBooks = await getCollection('books', ({ data }) => data.status !== 'archived');
const recentBooks = allBooks
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
  .slice(0, 2);

function formatStatus(status?: string): string | undefined {
  if (!status) {
    return undefined;
  }
  return status.charAt(0).toUpperCase() + status.slice(1);
}

function getStatusClass(status?: string): string | undefined {
  if (!status) {
    return undefined;
  }
  return `status-pill status-pill--${status}`;
}

const iconNames: Record<string, string> = {
  github: 'mdi:github',
  linkedin: 'mdi:linkedin',
  email: 'mdi:email-outline',
};

const socialLinks = Object.entries(siteConfig.social)
  .filter(([_, url]) => url)
  .map(([platform, url]) => ({
    key: platform,
    label: platform.charAt(0).toUpperCase() + platform.slice(1),
    url,
  }));

// Site stats for footer card
const allPosts = [
  ...allBlogs,
  ...allLiteratureReviews,
  ...allBooks,
];
const totalPosts = allPosts.length;

const lastUpdatedDate = allPosts.length > 0
  ? new Date(
      Math.max(
        ...allPosts.map((p) =>
          (p.data.updatedDate ?? p.data.publishDate).getTime()
        )
      )
    )
  : null;
const lastUpdated = lastUpdatedDate
  ? lastUpdatedDate.toLocaleDateString('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
    })
  : '—';

const totalReadingMinutes = allPosts.reduce(
  (sum, p) => sum + calculateReadingTime((p as { body?: string }).body ?? ''),
  0
);
const totalReadingDisplay =
  totalReadingMinutes >= 60
    ? `${Math.floor(totalReadingMinutes / 60)} hr ${totalReadingMinutes % 60} min`
    : `${totalReadingMinutes} min`;

const uniqueTagCount = new Set(
  allPosts.flatMap((post) => post.data.tags ?? [])
).size;
---

<BaseLayout>
  <SEO 
    slot="head"
    title="Tousif's Personal Blog"
    description={siteConfig.description}
    type="website"
    noSuffix
  />

  <!-- Structured Data for Homepage -->
  <StructuredData type="WebSite" />
  <StructuredData type="Person" />

  <main class="home-page">
    <!-- CASE-FIRST HERO -->
    <section class="hero">
      <div class="hero-grid">
        <!-- Left: Introduction -->
        <div class="hero-left">
          <h1 class="hero-title">
            Welcome, I'm Tousif! 
          </h1>
          <p class="hero-meta">
            {siteConfig.author.title} · {siteConfig.author.location}
          </p>
          <div class="social">
            {socialLinks.map((link) => {
              const iconName = iconNames[link.key];
              return (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={link.label}
                  class="social-link"
                >
                  {iconName ? (
                    <Icon name={iconName} class="social-icon" aria-hidden="true" />
                  ) : (
                    <span class="social-label">{link.label}</span>
                  )}
                  <span class="sr-only">{link.label}</span>
                </a>
              );
            })}
          </div>
          <div class="hero-cta">
            <a href="/blogs" class="btn-primary">Explore Blogs</a>
            <a href="/literature-review" class="btn-secondary">Literature Review</a>
          </div>
        </div>

        <!-- Right: Introduction -->
        <div class="hero-right">
          <p>
            I am a <b>software developer</b> who loves building impactful systems, learning new technologies and exploring the cutting edge of Computer Science
            including scalable systems, Machine Learning and Artificial Intelligence. I just made this website to document my learnings and share my thoughts. 
            <br> <br>
            If you are reading this, congrats! You are now probably top 1% of the people in my life who know what's going on in my mind :)
            <br>
            <b>Feel free to explore around!</b>
          </p>
          <ForwardLink href="/about" text="Read my journey" variant="muted" />
        </div>
      </div>
    </section>

    <!-- Content sections: Literature Review → CTA -->
    <div class="content-sections">
      <!-- Literature Review -->
      <section class="content-section recent-literature-review">
        <div class="section-header">
          <h2>Literature Reviews</h2>
          <ForwardLink href="/literature-review" text="View all" variant="muted" />
        </div>

        {recentLiteratureReviews.length > 0 ? (
          <div class="blog-card-list">
            {recentLiteratureReviews.map((paper) => {
              const date = paper.data.publishDate;
              const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
              const tags = paper.data.tags || [];
              const statusKey = paper.data.status;
              const status = formatStatus(statusKey);
              const statusClass = getStatusClass(statusKey);
              return (
                <article class="blog-card">
                  <a href={`/literature-review/${paper.id}`} class="blog-card-link">
                    <header class="blog-card-header">
                      <div class="blog-card-meta">
                        <span class="blog-card-date">{formattedDate}</span>
                        {status && statusClass && (
                          <span class={statusClass}>{status}</span>
                        )}
                      </div>
                      {tags.length > 0 && (
                        <div class="blog-card-tags">
                          {tags.slice(0, 4).map((tag) => (
                            <span class="blog-card-tag">{tag}</span>
                          ))}
                          {tags.length > 4 && <span class="blog-card-tag more">+{tags.length - 4}</span>}
                        </div>
                      )}
                    </header>
                    <h3 class="blog-card-title">{paper.data.title}</h3>
                    <p class="blog-card-excerpt">{paper.data.description}</p>
                    <span class="blog-card-cta">Read full article <span class="cta-arrow" aria-hidden="true">→</span></span>
                  </a>
                </article>
              );
            })}
          </div>
        ) : (
          <p class="no-blogs">No literature reviews documented yet.</p>
        )}
      </section>

      <hr class="section-divider" />

      <!-- Blogs -->
      <section class="content-section recent-posts-section">
        <div class="recent-posts-header">
          <div class="recent-posts-heading-row">
            <span class="recent-posts-badge">Latest</span>
            <h2 class="recent-posts-title">Recent Posts</h2>
          </div>
          <ForwardLink href="/blogs" text="View all" variant="muted" />
        </div>

        {recentBlogs.length > 0 ? (
          <div class="recent-posts-grid">
            {recentBlogs.map((blog, index) => {
              const date = blog.data.publishDate;
              const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
              const tags = blog.data.tags || [];
              const statusKey = 'status' in blog.data ? blog.data.status : undefined;
              const status = formatStatus(statusKey);
              const statusClass = getStatusClass(statusKey);
              const readingTime = getReadingTime((blog as { body?: string }).body ?? '');
              const isFirst = index === 0;
              return (
                <article class={`recent-post-card ${isFirst ? 'recent-post-card--featured' : ''}`}>
                  <a href={`/blogs/${blog.id}`} class="recent-post-card-link">
                    <div class="recent-post-card-meta">
                      <span class="recent-post-card-date">{formattedDate}</span>
                      <span class="recent-post-card-dot" aria-hidden="true">·</span>
                      <span class="recent-post-card-reading">{readingTime}</span>
                      {blog.data.featured && (
                        <>
                          <span class="recent-post-card-dot" aria-hidden="true">·</span>
                          <span class="featured-badge">
                            <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                            </svg>
                            Featured
                          </span>
                        </>
                      )}
                      {status && statusClass && (
                        <>
                          <span class="recent-post-card-dot" aria-hidden="true">·</span>
                          <span class={statusClass}>{status}</span>
                        </>
                      )}
                    </div>
                    <h3 class="recent-post-card-title">{blog.data.title}</h3>
                    <p class="recent-post-card-excerpt">{blog.data.description}</p>
                    {tags.length > 0 && (
                      <div class="recent-post-card-tags">
                        {tags.slice(0, 3).map((tag) => (
                          <span class="recent-post-card-tag">{tag}</span>
                        ))}
                        {tags.length > 3 && <span class="recent-post-card-tag more">+{tags.length - 3}</span>}
                      </div>
                    )}
                    <span class="recent-post-card-cta">Read article <span class="cta-arrow" aria-hidden="true">→</span></span>
                  </a>
                </article>
              );
            })}
          </div>
        ) : (
          <p class="no-blogs">No blogs documented yet.</p>
        )}
      </section>

      <hr class="section-divider" />

      <!-- Books -->
      <section class="content-section recent-books">
      <div class="section-header">
        <h2>Books I'm Studying</h2>
        <ForwardLink href="/books" text="View all" variant="muted" />
      </div>

      {recentBooks.length > 0 ? (
        <div class="blog-card-list">
          {recentBooks.map((book) => {
            const date = book.data.publishDate;
            const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
            const tags = book.data.tags || [];
            const statusKey = book.data.status;
            const status = formatStatus(statusKey);
            const statusClass = getStatusClass(statusKey);
            return (
              <article class="blog-card">
                <a href={`/books/${book.id}`} class="blog-card-link">
                  <header class="blog-card-header">
                    <div class="blog-card-meta">
                      <span class="blog-card-date">{formattedDate}</span>
                      {status && statusClass && (
                        <span class={statusClass}>{status}</span>
                      )}
                    </div>
                    {tags.length > 0 && (
                      <div class="blog-card-tags">
                        {tags.slice(0, 3).map((tag) => (
                          <span class="blog-card-tag">{tag}</span>
                        ))}
                        {tags.length > 3 && <span class="blog-card-tag more">+{tags.length - 3}</span>}
                      </div>
                    )}
                  </header>
                  <h3 class="blog-card-title">{book.data.title}</h3>
                  <p class="blog-card-excerpt">{book.data.description}</p>
                  <span class="blog-card-cta">Read my notes <span class="cta-arrow" aria-hidden="true">→</span></span>
                </a>
              </article>
            );
          })}
        </div>
      ) : (
        <p class="no-blogs">No books documented yet.</p>
      )}
      </section>

      <!-- Site stats footer card -->
      <section class="site-stats" aria-label="Site statistics">
        <div class="site-stats-card">
          <span class="site-stats-item">
            <span class="site-stats-value">{totalPosts}</span>
            <span class="site-stats-label">posts</span>
          </span>

          <span class="site-stats-divider" aria-hidden="true">·</span>

          <span class="site-stats-item">
            <span class="site-stats-value">{uniqueTagCount}</span>
            <span class="site-stats-label">topics</span>
          </span>

          <span class="site-stats-divider" aria-hidden="true">·</span>

          <span class="site-stats-item">
            <span class="site-stats-value">{totalReadingDisplay}</span>
            <span class="site-stats-label">reading time</span>
          </span>

          <span class="site-stats-divider" aria-hidden="true">·</span>
          
          <span class="site-stats-item">
            <span class="site-stats-value">{lastUpdated}</span>
            <span class="site-stats-label">last updated</span>
          </span>
        </div>
      </section>
    </div>
  </main>

  <style>
    .home-page {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 1.5rem 4rem;
    }

    .hero {
      padding: 4rem 0 5rem;
      border-bottom: 1px solid var(--color-border);
      margin-bottom: 4rem;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: start;
    }

    .hero-left {
      padding-right: 2rem;
    }

    .hero-title {
      font-size: 2.25rem;
      line-height: 1.3;
      font-weight: 600;
      letter-spacing: -0.02em;
      margin-bottom: 1.5rem;
      color: var(--color-text);
    }

    .hero-title-emphasis {
      color: var(--color-text-secondary);
    }

    .hero-sub {
      font-size: 1.125rem;
      color: var(--color-text-secondary);
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }

    .hero-meta {
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 2rem;
      letter-spacing: 0.01em;
    }

    .social {
      display: flex;
      gap: 0.75rem;
      margin-bottom: 1.75rem;
    }

    .social-link {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 2rem;
      height: 2rem;
      color: var(--color-text-muted);
      text-decoration: none;
      transition: color 0.2s ease, transform 0.2s ease;
    }

    .social-link:hover {
      color: var(--color-text);
      transform: translateY(-1px);
    }

    .social-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    .social-label {
      font-size: 0.8125rem;
    }

    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    .hero-cta {
      display: flex;
      gap: 1rem;
    }

    .btn-primary {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: var(--color-text);
      color: var(--color-bg);
      font-weight: 600;
      font-size: 0.9375rem;
      text-decoration: none;
      border-radius: 6px;
      transition: opacity 0.2s ease;
    }

    .btn-primary:hover {
      opacity: 0.85;
    }

    .btn-secondary {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: transparent;
      color: var(--color-text);
      font-weight: 500;
      font-size: 0.9375rem;
      text-decoration: none;
      border: 1px solid var(--color-border);
      border-radius: 6px;
      transition: border-color 0.2s ease;
    }

    .btn-secondary:hover {
      border-color: var(--color-text-secondary);
    }

    .hero-right {
      padding-top: 0.5rem;
    }

    .case-snapshots {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .case-snapshot {
      display: block;
      padding: 1.25rem 1.5rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      text-decoration: none;
      transition: border-color 0.2s ease, background 0.2s ease;
    }

    .case-snapshot:hover {
      border-color: var(--color-text-muted);
      background: var(--color-bg-elevated);
    }

    .case-label {
      display: block;
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--color-text-muted);
      margin-bottom: 0.375rem;
    }

    .case-title {
      display: block;
      font-size: 1rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 0.5rem;
      line-height: 1.4;
    }

    .case-outcome {
      display: block;
      font-size: 0.875rem;
      color: var(--color-text-secondary);
      line-height: 1.5;
    }

    .introduction {
      max-width: 600px;
      margin-bottom: 5rem;
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
    }

    .introduction p {
      margin-bottom: 1rem;
    }

    .introduction p:first-child {
      color: var(--color-text);
    }

    /* Content sections: Literature Review through CTA */
    .content-sections {
      padding-top: 0.5rem;
    }

    .content-section {
      padding: var(--space-3xl) 0;
    }

    .content-section:first-of-type {
      padding-top: 0;
    }

    .section-divider {
      border: none;
      height: 1px;
      background: var(--color-border);
      margin: 0;
      opacity: 0.8;
    }

    .section-heading {
      font-size: clamp(1.25rem, 1.1rem + 0.4vw, 1.5rem);
      font-weight: 600;
      letter-spacing: -0.02em;
      color: var(--color-text);
      margin: 0;
    }

    .section-header {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 1rem;
      margin-bottom: var(--space-xl);
    }

    /* Recent Posts section – distinct UI */
    .recent-posts-section {
      --recent-accent: var(--color-accent);
    }

    .recent-posts-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      margin-bottom: var(--space-xl);
      flex-wrap: wrap;
    }

    .recent-posts-heading-row {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .recent-posts-badge {
      display: inline-flex;
      align-items: center;
      padding: 0.25rem 0.625rem;
      font-size: 0.6875rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--recent-accent);
      background: var(--color-accent-muted);
      border-radius: 999px;
    }

    .recent-posts-title {
      font-size: clamp(1.25rem, 1.1rem + 0.4vw, 1.5rem);
      font-weight: 600;
      letter-spacing: -0.02em;
      color: var(--color-text);
      margin: 0;
    }

    .recent-posts-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    @media (min-width: 640px) {
      .recent-posts-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 900px) {
      .recent-posts-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: var(--space-xl);
      }
    }

    .recent-post-card {
      position: relative;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: var(--border-radius-lg);
      overflow: hidden;
      transition: border-color var(--transition-base), box-shadow var(--transition-base), transform var(--transition-base);
    }

    .recent-post-card:hover,
    .recent-post-card:focus-within {
      border-color: var(--color-text-muted);
      box-shadow: var(--shadow-md);
    }

    .recent-post-card:focus-within {
      transform: translateY(-2px);
    }

    .recent-post-card--featured {
      grid-column: 1 / -1;
    }

    @media (min-width: 900px) {
      .recent-post-card--featured .recent-post-card-link {
        padding: var(--space-xl);
      }
      .recent-post-card--featured .recent-post-card-title {
        font-size: 1.5rem;
      }
      .recent-post-card--featured .recent-post-card-excerpt {
        font-size: 1.0625rem;
      }
    }

    .recent-post-card-link {
      display: flex;
      flex-direction: column;
      gap: var(--space-sm);
      padding: var(--space-lg);
      height: 100%;
      color: inherit;
      text-decoration: none;
    }

    .recent-post-card-link:focus-visible {
      outline: 2px solid var(--color-accent);
      outline-offset: 4px;
    }

    .recent-post-card-meta {
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.35rem;
      font-size: 0.8125rem;
      color: var(--color-text-muted);
    }

    .recent-post-card-date {
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.06em;
    }

    .recent-post-card-dot {
      opacity: 0.6;
      user-select: none;
    }

    .recent-post-card-reading {
      font-weight: 500;
    }

    .recent-post-card-title {
      font-size: 1.2rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      line-height: 1.3;
      color: var(--color-text);
      margin: 0;
      transition: color 0.2s ease;
    }

    .recent-post-card-link:hover .recent-post-card-title {
      color: var(--recent-accent);
    }

    .recent-post-card-excerpt {
      font-size: 0.9375rem;
      line-height: 1.6;
      color: var(--color-text-secondary);
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .recent-post-card-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .recent-post-card-tag {
      display: inline-flex;
      align-items: center;
      padding: 0.2rem 0.5rem;
      border-radius: 999px;
      font-size: 0.7rem;
      font-weight: 500;
      background: var(--color-bg);
      color: var(--color-text-secondary);
      border: 1px solid var(--color-border);
    }

    .recent-post-card-tag.more {
      background: transparent;
      border-style: dashed;
    }

    .recent-post-card-cta {
      margin-top: auto;
      padding-top: var(--space-sm);
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--recent-accent);
    }

    .recent-post-card-cta .cta-arrow {
      display: inline-block;
      transition: transform 0.2s ease;
    }

    .recent-post-card-link:hover .recent-post-card-cta .cta-arrow {
      transform: translateX(2px);
    }

    .blog-card-list {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 320px), 1fr));
      gap: var(--space-xl);
    }

    .blog-card {

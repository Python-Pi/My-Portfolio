---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import Pagination from '../../components/Pagination.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import PageStats from '../../components/PageStats.astro';
import { getCollection } from 'astro:content';
import { pagesConfig } from '../../pages.config';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const papersPerPage = 5;

  const allPapers = await getCollection('literature-review', ({ data }) => data.status !== 'archived');

  const sortedPapers = allPapers.sort((a, b) => {
    return b.data.publishDate.getTime() - a.data.publishDate.getTime();
  });

  const totalPages = Math.ceil(sortedPapers.length / papersPerPage) || 1;

  return Array.from({ length: totalPages }, (_, i) => {
    const page = i + 1;
    const start = i * papersPerPage;
    const end = start + papersPerPage;

    return {
      params: { page: page === 1 ? undefined : String(page) },
      props: {
        papers: sortedPapers.slice(start, end),
        currentPage: page,
        totalPages,
        totalPapers: sortedPapers.length,
      },
    };
  });
};

interface Props {
  papers: Awaited<ReturnType<typeof getCollection<'literature-review'>>>;
  currentPage: number;
  totalPages: number;
  totalPapers: number;
}

const { papers, currentPage, totalPages, totalPapers } = Astro.props;
const papersPerPage = 5;

const pageTitle = currentPage === 1
  ? pagesConfig.literatureReview.title
  : `${pagesConfig.literatureReview.title} - Page ${currentPage}`;
---

<BaseLayout>
  <SEO
    slot="head"
    title={pageTitle}
    description={pagesConfig.literatureReview.description}
    type="website"
  />

  <main class="page-container">
    <header class="page-header">
      <p class="page-label">Literature Review</p>
      <h1 class="page-title">{pagesConfig.literatureReview.heading}</h1>
      <p class="page-intro">
        {pagesConfig.literatureReview.intro}
      </p>
      <PageStats
        text={totalPages > 1
          ? `Showing ${(currentPage - 1) * papersPerPage + 1}â€“${Math.min(currentPage * papersPerPage, totalPapers)} of ${totalPapers} reviews`
          : `${totalPapers} reviews`
        }
      />
    </header>

    {papers.length > 0 ? (
      <div class="card-list">
        {papers.map((paper) => (
          <ArticleCard
            title={paper.data.title}
            slug={paper.id}
            description={paper.data.description}
            publishDate={paper.data.publishDate}
            tags={paper.data.tags}
            basePath="/literature-review"
            featured={paper.data.featured}
            status={paper.data.status}
          />
        ))}
      </div>
    ) : (
      <p class="empty-state">No literature reviews published yet.</p>
    )}

    <Pagination
      currentPage={currentPage}
      totalPages={totalPages}
      baseUrl="/literature-review"
    />
  </main>
</BaseLayout>

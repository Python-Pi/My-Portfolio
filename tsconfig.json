{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "public/pagefind",
    "dist",
    "src/pages/notes.astro"
  ],
  "include": [
    "src",
    "astro.config.mjs",
    "env.d.ts",
    "tsconfig.json"
  ]
}
